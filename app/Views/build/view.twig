<script>
async function cloneBuild() {
    try {
        const response = await fetch('/build/clone', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ build_id: {{ build.id }} })
        });

        const data = await response.json();

        if (data.success) {
            window.location.href = `/build/${data.data.build_id}/edit`;
        } else {
            alert('Failed to clone build');
        }
    } catch (error) {
        alert('Network error');
    }
}

async function exportBuild() {
    try {
        const response = await fetch('/build/{{ build.id }}/export');
        const data = await response.json();

        if (data.success) {
            // Create download link
            const blob = new Blob([data.pob_code], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${data.build_name}.txt`;
            a.click();
            URL.revokeObjectURL(url);
        } else {
            alert('Failed to export build');
        }
    } catch (error) {
        alert('Network error');
    }
}
</script>
{% endblock %}
