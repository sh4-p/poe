{% extends "layouts/base.twig" %}

{% block content %}
    <div class="bg-gray-900 min-h-screen py-8">
        <div class="container mx-auto px-4">
            {# Header #}
            <div class="bg-gray-800 rounded-lg border border-gray-700 p-6 mb-6">
                <div class="flex items-start justify-between">
                    <div class="flex-1">
                        <h1 class="text-3xl font-bold text-yellow-500 mb-2">{{ build.build_name }}</h1>
                        <div class="flex items-center gap-4 text-gray-400">
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                                </svg>
                                {{ build.username }}
                            </span>
                            <span class="flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                </svg>
                                Updated {{ build.updated_at|date('M d, Y') }}
                            </span>
                        </div>
                    </div>

                    <div class="flex gap-2">
                        {% if is_owner %}
                            <a href="/build/{{ build.id }}/edit" class="px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg">
                                Edit Build
                            </a>
                        {% else %}
                            <button onclick="cloneBuild()" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg">
                                Fork Build
                            </button>
                        {% endif %}
                        <button onclick="exportBuild()" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg">
                            Export POB
                        </button>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                {# Build Details Sidebar #}
                <div class="lg:col-span-1 space-y-6">
                    {# Build Info #}
                    <div class="bg-gray-800 rounded-lg border border-gray-700 p-6">
                        <h2 class="text-lg font-bold text-yellow-500 mb-4">Build Details</h2>
                        <dl class="space-y-3">
                            <div>
                                <dt class="text-sm text-gray-400">Ascendancy</dt>
                                <dd class="text-white font-medium">{{ build.ascendancy_class }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm text-gray-400">Version</dt>
                                <dd class="text-white font-medium">{{ build.poe_version }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm text-gray-400">Visibility</dt>
                                <dd>
                                    {% if build.is_public %}
                                        <span class="px-2 py-1 bg-green-600 bg-opacity-20 text-green-400 text-xs font-medium rounded">Public</span>
                                    {% else %}
                                        <span class="px-2 py-1 bg-gray-600 bg-opacity-50 text-gray-400 text-xs font-medium rounded">Private</span>
                                    {% endif %}
                                </dd>
                            </div>
                        </dl>
                    </div>

                    {# Items #}
                    {% if build_data.items %}
                        <div class="bg-gray-800 rounded-lg border border-gray-700 p-6">
                            <h2 class="text-lg font-bold text-yellow-500 mb-4">Equipment</h2>
                            <div class="space-y-2 text-sm">
                                {% for item in build_data.items %}
                                    <div class="p-2 bg-gray-700 rounded">
                                        <div class="font-medium text-white">{{ item.name }}</div>
                                        <div class="text-xs text-gray-400">{{ item.slot }}</div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Gems #}
                    {% if build_data.gems %}
                        <div class="bg-gray-800 rounded-lg border border-gray-700 p-6">
                            <h2 class="text-lg font-bold text-yellow-500 mb-4">Skill Gems</h2>
                            <div class="space-y-3">
                                {% for group in build_data.gems %}
                                    <div class="p-3 bg-gray-700 rounded">
                                        <div class="text-xs text-gray-400 mb-2">{{ group.link_group }}</div>
                                        <div class="flex flex-wrap gap-1">
                                            {% for gem in group.gems %}
                                                <span class="px-2 py-1 bg-gray-600 text-white text-xs rounded">{{ gem }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>

                {# Passive Tree #}
                <div class="lg:col-span-3">
                    <div class="bg-gray-800 rounded-lg border border-gray-700 p-6">
                        <h2 class="text-lg font-bold text-yellow-500 mb-4">Passive Skill Tree</h2>
                        <div id="passive-tree-container" class="bg-gray-900 rounded-lg border border-gray-700 h-[700px] relative"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

