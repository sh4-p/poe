{% extends "layouts/base.twig" %}

{% block content %}
    <div class="bg-gray-900 min-h-screen py-8">
        <div class="container mx-auto px-4">
            {# Header #}
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-4xl font-bold text-yellow-500 mb-2">My Builds</h1>
                    <p class="text-gray-400">Manage your Path of Exile builds</p>
                </div>
                <a href="/build/new" class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg transition-all transform hover:scale-105 inline-flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create New Build
                </a>
            </div>

            {% if builds is empty %}
                {# Empty state #}
                <div class="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
                    <svg class="w-24 h-24 mx-auto text-gray-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                    <h2 class="text-2xl font-bold text-white mb-4">No builds yet</h2>
                    <p class="text-gray-400 mb-6">Start creating your Path of Exile builds and manage them here</p>
                    <div class="flex justify-center gap-4">
                        <a href="/build/new" class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg inline-flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Create Build
                        </a>
                        <a href="/build/import" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded-lg inline-flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                            </svg>
                            Import from POB
                        </a>
                    </div>
                </div>
            {% else %}
                {# Builds grid #}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for build in builds %}
                        <div class="bg-gray-800 rounded-lg border border-gray-700 hover:border-yellow-600 transition-all overflow-hidden group">
                            {# Build Header #}
                            <div class="p-6 border-b border-gray-700">
                                <div class="flex items-start justify-between mb-3">
                                    <h3 class="text-xl font-bold text-white group-hover:text-yellow-500 transition-colors line-clamp-2">
                                        {{ build.build_name }}
                                    </h3>
                                    {% if build.is_public %}
                                        <span class="ml-2 px-2 py-1 bg-green-600 bg-opacity-20 text-green-400 text-xs font-medium rounded flex-shrink-0">
                                            Public
                                        </span>
                                    {% else %}
                                        <span class="ml-2 px-2 py-1 bg-gray-600 bg-opacity-50 text-gray-400 text-xs font-medium rounded flex-shrink-0">
                                            Private
                                        </span>
                                    {% endif %}
                                </div>

                                <div class="space-y-2 text-sm text-gray-400">
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                                        </svg>
                                        {{ build.ascendancy_class }}
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                        </svg>
                                        Updated {{ build.updated_at|date('M d, Y') }}
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                                            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                                        </svg>
                                        Version {{ build.poe_version }}
                                    </div>
                                </div>
                            </div>

                            {# Actions #}
                            <div class="p-4 bg-gray-750 flex gap-2">
                                <a href="/build/{{ build.id }}" class="flex-1 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-center rounded-lg text-sm transition-all">
                                    View
                                </a>
                                <a href="/build/{{ build.id }}/edit" class="flex-1 px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white text-center rounded-lg text-sm transition-all">
                                    Edit
                                </a>
                                <button onclick="deleteBuild({{ build.id }})" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition-all">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
<script>
async function deleteBuild(buildId) {
    if (!confirm('Are you sure you want to delete this build? This action cannot be undone.')) {
        return;
    }

    try {
        const response = await fetch(`/build/${buildId}/delete`, {
            method: 'POST'
        });

        const data = await response.json();

        if (data.success) {
            window.location.reload();
        } else {
            alert('Failed to delete build: ' + (data.error || 'Unknown error'));
        }
    } catch (error) {
        alert('Network error');
    }
}
</script>
{% endblock %}
