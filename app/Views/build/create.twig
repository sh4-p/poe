{% extends "layouts/base.twig" %}

{% block content %}
    <div class="bg-gray-900 min-h-screen py-8">
        <div class="container mx-auto px-4 max-w-2xl">
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-yellow-500 mb-2">Create New Build</h1>
                <p class="text-gray-400">Start planning your Path of Exile build</p>
            </div>

            <div class="bg-gray-800 rounded-lg border border-gray-700 p-8">
                <form id="create-build-form" class="space-y-6">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    {# Build Name #}
                    <div>
                        <label for="build_name" class="block text-sm font-medium text-gray-300 mb-2">
                            Build Name *
                        </label>
                        <input
                            type="text"
                            id="build_name"
                            name="build_name"
                            required
                            placeholder="e.g., Righteous Fire Juggernaut"
                            class="w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
                        >
                    </div>

                    {# Ascendancy Class #}
                    <div>
                        <label for="ascendancy_class" class="block text-sm font-medium text-gray-300 mb-2">
                            Ascendancy Class *
                        </label>
                        <select
                            id="ascendancy_class"
                            name="ascendancy_class"
                            required
                            class="w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
                        >
                            <option value="">Select Ascendancy</option>
                            {% for ascendancy in ascendancies %}
                                <option value="{{ ascendancy }}">{{ ascendancy }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    {# POE Version #}
                    <div>
                        <label for="poe_version" class="block text-sm font-medium text-gray-300 mb-2">
                            Path of Exile Version
                        </label>
                        <input
                            type="text"
                            id="poe_version"
                            name="poe_version"
                            value="3.25"
                            class="w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
                        >
                    </div>

                    {# Public/Private #}
                    <div class="flex items-center">
                        <input
                            type="checkbox"
                            id="is_public"
                            name="is_public"
                            value="1"
                            class="h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-600 rounded bg-gray-700"
                        >
                        <label for="is_public" class="ml-3 block text-sm text-gray-300">
                            Make this build public (others can view it)
                        </label>
                    </div>

                    {# Buttons #}
                    <div class="flex gap-4">
                        <button
                            type="submit"
                            class="flex-1 px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg transition-all"
                        >
                            Create Build
                        </button>
                        <a
                            href="/my-builds"
                            class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all text-center"
                        >
                            Cancel
                        </a>
                    </div>
                </form>
            </div>

            {# Quick Start Options #}
            <div class="mt-8 bg-gray-800 rounded-lg border border-gray-700 p-6">
                <h3 class="text-lg font-bold text-white mb-4">Or start with:</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <a href="/build/import" class="p-4 bg-gray-700 hover:bg-gray-600 rounded-lg transition-all flex items-center">
                        <svg class="w-8 h-8 text-yellow-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                        </svg>
                        <div>
                            <div class="font-medium text-white">Import from POB</div>
                            <div class="text-sm text-gray-400">Use Path of Building code</div>
                        </div>
                    </a>
                    <a href="#" onclick="alert('AI Generation coming soon!')" class="p-4 bg-gray-700 hover:bg-gray-600 rounded-lg transition-all flex items-center">
                        <svg class="w-8 h-8 text-yellow-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                        </svg>
                        <div>
                            <div class="font-medium text-white">AI Generator</div>
                            <div class="text-sm text-gray-400">Let AI create a build</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
<script>
document.getElementById('create-build-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);
    const data = {
        build_id: 0,
        build_name: formData.get('build_name'),
        ascendancy_class: formData.get('ascendancy_class'),
        poe_version: formData.get('poe_version'),
        csrf_token: formData.get('csrf_token')
    };

    try {
        const response = await fetch('/build/save', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
            window.location.href = `/build/${result.data.build_id}/edit`;
        } else {
            alert('Failed to create build: ' + (result.error || 'Unknown error'));
        }
    } catch (error) {
        alert('Network error');
    }
});
</script>
{% endblock %}
