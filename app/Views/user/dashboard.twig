{% extends "layouts/base.twig" %}

{% block content %}
    <div class="bg-gray-900 min-h-screen py-8">
        <div class="container mx-auto px-4">
            {# Header #}
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-yellow-500 mb-2">Dashboard</h1>
                <p class="text-gray-400">Welcome back, <span class="text-white">{{ user.username }}</span>!</p>
            </div>

            {# Stats Cards #}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                {# Total Builds #}
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-yellow-600 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm">Total Builds</p>
                            <p class="text-3xl font-bold text-white mt-2">{{ stats.total_builds }}</p>
                        </div>
                        <div class="bg-yellow-600 bg-opacity-20 p-4 rounded-lg">
                            <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                            </svg>
                        </div>
                    </div>
                </div>

                {# Public Builds #}
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-yellow-600 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm">Public Builds</p>
                            <p class="text-3xl font-bold text-white mt-2">{{ stats.public_builds }}</p>
                        </div>
                        <div class="bg-green-600 bg-opacity-20 p-4 rounded-lg">
                            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                        </div>
                    </div>
                </div>

                {# Member Since #}
                <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-yellow-600 transition-all">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm">Member Since</p>
                            <p class="text-xl font-bold text-white mt-2">{{ stats.member_since|date('M Y') }}</p>
                        </div>
                        <div class="bg-blue-600 bg-opacity-20 p-4 rounded-lg">
                            <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            {# Quick Actions #}
            <div class="mb-8">
                <div class="flex flex-wrap gap-4">
                    <a href="/build/new" class="inline-flex items-center px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg transition-all transform hover:scale-105">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Create New Build
                    </a>
                    <a href="/build/import" class="inline-flex items-center px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                        </svg>
                        Import from POB
                    </a>
                    <a href="/builds" class="inline-flex items-center px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-medium rounded-lg transition-all">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Browse Builds
                    </a>
                </div>
            </div>

            {# Recent Builds #}
            <div class="bg-gray-800 rounded-lg border border-gray-700">
                <div class="p-6 border-b border-gray-700">
                    <div class="flex items-center justify-between">
                        <h2 class="text-2xl font-bold text-yellow-500">Recent Builds</h2>
                        <a href="/my-builds" class="text-yellow-500 hover:text-yellow-400 text-sm font-medium">
                            View All â†’
                        </a>
                    </div>
                </div>

                {% if recent_builds is empty %}
                    <div class="p-12 text-center">
                        <svg class="w-16 h-16 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <p class="text-gray-400 text-lg mb-4">No builds yet</p>
                        <a href="/build/new" class="inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg">
                            Create Your First Build
                        </a>
                    </div>
                {% else %}
                    <div class="divide-y divide-gray-700">
                        {% for build in recent_builds %}
                            <div class="p-6 hover:bg-gray-750 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-3 mb-2">
                                            <h3 class="text-lg font-semibold text-white">{{ build.build_name }}</h3>
                                            {% if build.is_public %}
                                                <span class="px-2 py-1 bg-green-600 bg-opacity-20 text-green-400 text-xs font-medium rounded">Public</span>
                                            {% else %}
                                                <span class="px-2 py-1 bg-gray-600 bg-opacity-50 text-gray-400 text-xs font-medium rounded">Private</span>
                                            {% endif %}
                                        </div>
                                        <div class="flex items-center gap-4 text-sm text-gray-400">
                                            <span class="flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
                                                </svg>
                                                {{ build.ascendancy_class }}
                                            </span>
                                            <span class="flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                                </svg>
                                                {{ build.updated_at|date('M d, Y') }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <a href="/build/{{ build.id }}/edit" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg text-sm transition-all">
                                            Edit
                                        </a>
                                        <a href="/build/{{ build.id }}" class="px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg text-sm transition-all">
                                            View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
