# Application
APP_NAME="Exile Architect"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=exile_architect
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file

# AI Service (Google Gemini)
GEMINI_API_KEY=your_api_key_here

# API Keys
POE_NINJA_API_URL=https://poe.ninja/api/data

# Scraper Settings
SCRAPER_DELAY=2
SCRAPER_USER_AGENT="ExileArchitect/1.0"

# Security
APP_KEY=
CSRF_TOKEN_LENGTH=32

# Email (Future use)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"
