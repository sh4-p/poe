{
    "name": "exile-architect/build-planner",
    "description": "Advanced Path of Exile Build Planner with AI Integration",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Exile Architect Team"
        }
    ],
    "require": {
        "php": "^8.2",
        "twig/twig": "^3.0",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/Controllers/",
            "App\\Models\\": "app/Models/",
            "App\\Core\\": "app/Core/",
            "App\\Services\\": "app/Services/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
